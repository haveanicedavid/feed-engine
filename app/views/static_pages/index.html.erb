<body id="landing-background">
<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h1 class="header center black-text text-darken-2">tweetsum</h1>
      <div class="row center">
        <h5 class="header col s12 landing-quote cyan-text text-darken-3">Providing a scheduled summary of your twitter sentiment.</h5>
      </div>
      <br><br>

    </div>
  </div>
  <div class="parallax"><%= image_tag("throttle.png", alt: "Unsplashed background img 1") %></div>
</div>


<div class="container">
  <div class="section">

    <!--   Icon Section   -->
    <div class="row">
      <div class="col s12 m4">
