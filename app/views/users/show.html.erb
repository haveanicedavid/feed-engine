<div class="row user-header teal darken-3">
  <div class="col s1">
    <%= image_tag current_user.image_url, class: "circle responsive-img", id: "profile-pic" %>
  </div>
  <div class="col s8">
    <h4 class="lime-text text-lighten-4"><%= current_user.name %></h4>
  </div>
</div>
<div class="row">
  <div class="col s3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p>@<%= current_user.nickname %></p><br>
      <!-- </div>
    </div>
    <div class="row">
      <div class="col s3"> -->
        <p>@<%= current_user.location %></p>
      </div>
    </div>
  </div>
</div>


<%= form_tag results_path, method: "post" do %>
  <%= label_tag "Search" %>
  <%= text_field_tag "search[word]" %>
  <%= submit_tag "Submit" %>
<% end %>


 